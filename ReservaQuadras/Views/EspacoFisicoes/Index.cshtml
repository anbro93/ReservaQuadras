@model IEnumerable<ReservaQuadras.Models.EspacoFisico>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Cadastrar Espaço</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsLiberado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLiberado)
            </td>
            <td>
                <a asp-action="Index" asp-controller="Horarios" asp-route-id="@item.EspacoFisicoID">Horarios</a> |
                <a asp-action="Edit" asp-route-id="@item.EspacoFisicoID">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.EspacoFisicoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
