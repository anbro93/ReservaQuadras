@model ReservaQuadras.Models.Horario

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Horario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DiaID" class="control-label"></label>
                <select asp-for="DiaID" class ="form-control" asp-items="ViewBag.DiaID"></select>
            </div>
            @Html.Hidden("EspacoFisicoID", ViewData["EspacoFisicoID"])
            <div class="form-group">
                <label asp-for="HoraInicio" class="control-label"></label>

                <select asp-for="HoraInicio" class="form-control" asp-items="ViewBag.HorariosInicio"></select>
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraFim" class="control-label"></label>
                <select asp-for="HoraFim" class="form-control" asp-items="ViewBag.HorariosFim"></select>
                <span asp-validation-for="HoraFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
